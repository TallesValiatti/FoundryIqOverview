@{
    ViewData["Title"] = "Home Page";
    ViewData["Description"] = "Contoso Software - Enterprise software delivery platform built for reliability, governance, and speed. Transform your software development lifecycle.";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <!-- Hero Section -->
            <div class="text-center mb-5">
                <h1 class="display-3 fw-bold mb-3">Contoso Software</h1>
                <p class="lead fs-4 text-muted">Reliability and Operations for Critical Services</p>
                <p class="fs-5 mt-4">
                    Founded in Seattle in 2016, we help organizations detect fast, mitigate with discipline, and communicate with facts.
                </p>
            </div>

            <!-- Quick Overview -->
            <div class="row mb-5">
                <div class="col-md-4 mb-4">
                    <div class="card text-center h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="mb-3">
                                <span class="badge bg-primary fs-3">📜</span>
                            </div>
                            <h5 class="card-title">Our History</h5>
                            <p class="card-text">From a consulting challenge in 2016 to a leading SaaS platform for incident management.</p>
                            <a asp-action="History" class="btn btn-outline-primary">Learn More</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card text-center h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="mb-3">
                                <span class="badge bg-primary fs-3">🚀</span>
                            </div>
                            <h5 class="card-title">Our Platform</h5>
                            <p class="card-text">Observability, incident management, and communication in one unified system.</p>
                            <a asp-action="Platform" class="btn btn-outline-primary">Explore Platform</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card text-center h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="mb-3">
                                <span class="badge bg-primary fs-3">🤝</span>
                            </div>
                            <h5 class="card-title">Our Customers</h5>
                            <p class="card-text">Trusted by fintech, SaaS, e-commerce, healthtech, and enterprise organizations.</p>
                            <a asp-action="Customers" class="btn btn-outline-primary">See Who We Serve</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Key Value Proposition -->
            <div class="card bg-primary text-white mb-5">
                <div class="card-body p-5">
                    <h3 class="card-title text-center mb-4">Why Contoso Software?</h3>
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            <h5>⚡ Detect Fast</h5>
                            <p class="mb-0">Real-time observability with intelligent correlation across metrics, logs, and traces.</p>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <h5>🎯 Mitigate with Discipline</h5>
                            <p class="mb-0">Structured workflows, severity classification, and clear escalation paths.</p>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <h5>📢 Communicate with Facts</h5>
                            <p class="mb-0">Status pages, notifications, and update templates that keep everyone informed.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Company Stats -->
            <div class="row text-center mb-5">
                <div class="col-md-3 mb-3">
                    <div class="p-3">
                        <h2 class="display-5 fw-bold text-primary">2016</h2>
                        <p class="text-muted">Founded</p>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="p-3">
                        <h2 class="display-5 fw-bold text-primary">2018</h2>
                        <p class="text-muted">First SaaS Product</p>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="p-3">
                        <h2 class="display-5 fw-bold text-primary">24/7</h2>
                        <p class="text-muted">Operations Coverage</p>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="p-3">
                        <h2 class="display-5 fw-bold text-primary">🌎</h2>
                        <p class="text-muted">Global Customer Base</p>
                    </div>
                </div>
            </div>

            <!-- Call to Action -->
            <div class="text-center mt-5 p-5 bg-light rounded">
                <h3 class="mb-3">Built for Organizations That Can't Afford Downtime</h3>
                <p class="lead">
                    Whether you're managing a payment platform, enterprise SaaS, or critical healthcare systems, 
                    Contoso provides the tools and processes you need to operate with confidence.
                </p>
            </div>
        </div>
    </div>
</div>
